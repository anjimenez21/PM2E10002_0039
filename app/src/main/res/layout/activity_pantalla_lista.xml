<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="311dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="text"
        android:text="Buscar"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="58dp" />

    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="66dp"
        android:layout_height="39dp"
        android:backgroundTint="#03A9F4"
        android:textAlignment="center"
        android:textSize="14sp"
        app:icon="@android:drawable/ic_menu_revert"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="19dp" />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="64dp"
        android:layout_height="40dp"
        android:backgroundTint="#03A9F4"
        android:textAlignment="center"
        android:textSize="14sp"
        app:icon="@android:drawable/ic_menu_search"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="55dp" />

    <ListView
        android:layout_width="385dp"
        android:layout_height="494dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="120dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="291dp"
        android:layout_height="37dp"
        android:fontFamily="sans-serif-black"
        android:text="LISTADO DE CONTACTOS"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="18dp"
        tools:text="LISTADO DE CONTACTOS" />

    <Button
        android:id="@+id/btnCompatir"
        android:layout_width="124dp"
        android:layout_height="46dp"
        android:backgroundTint="#03A9F4"
        android:text="Compartir"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="624dp" />

    <Button
        android:id="@+id/btnVerImagen"
        android:layout_width="124dp"
        android:layout_height="45dp"
        android:backgroundTint="#03A9F4"
        android:text="Ver Imagen"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="670dp" />

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="121dp"
        android:layout_height="46dp"
        android:backgroundTint="#03A9F4"
        android:text="Eliminar"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="622dp" />

    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="121dp"
        android:layout_height="44dp"
        android:backgroundTint="#03A9F4"
        android:text="Actualizar"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="671dp" />
</androidx.constraintlayout.widget.ConstraintLayout>